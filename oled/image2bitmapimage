from PIL import Image                                                                                           def jpeg_to_hex_array(file_path, output_size=(128, 64)):    # Open the image file                                   with Image.open(file_path) as img:                          # Resize the image to the specified dimensions          img = img.resize(output_size)                           # Convert image to bytes                                byte_array = img.tobytes()                              # Convert bytes to hex array                            hex_array = [f'0x{byte:02x}' for byte in byte_array]                                                        return hex_array                                                                                            hex_array = jpeg_to_hex_array("{image.jpeg}")             print(hex_array)
